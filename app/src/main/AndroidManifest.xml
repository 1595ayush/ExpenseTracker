<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coditsuisse.team81.expensetracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SummaryActivity" />
        <activity android:name=".TransactionActivity" />
        <activity android:name=".BudgetActivity" />
        <activity android:name=".ExpensesActivity" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".CategoryActivity" />
        <activity android:name=".ListActivity" />
        <activity
            android:name=".LiabilityActivity"
            android:label="@string/title_activity_liability" >
        </activity>
        <activity
            android:name=".SavingsActivity"
            android:label="@string/title_activity_savings" >
        </activity>
        <activity
            android:name=".Chart"
            android:label="@string/title_activity_chart" >
        </activity>
    </application>

</manifest>
