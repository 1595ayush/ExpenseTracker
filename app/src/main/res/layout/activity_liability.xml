<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/lia_date_lia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:text="Date"
        />

    <TextView
        android:id="@+id/lia_type_lia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:layout_toRightOf="@id/lia_date_lia"
        android:text="Type"
        />

    <TextView
        android:id="@+id/lia_amt_lia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:text="Amount"
        android:layout_toRightOf="@id/lia_type_lia"
        />
    <ListView
        android:id="@+id/lia_lv"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/lia_type_lia"
        ></ListView>
</RelativeLayout>